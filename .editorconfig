# 官网
# http://EditorConfig.org
# 详细介绍
# https://github.com/editorconfig/editorconfig/wiki/EditorConfig-Properties
root = true

# 对所有文件生效
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
tab_size = 2
trim_trailing_whitespace = true
insert_final_newline = false

# 对后缀名为 md 的文件生效
[*.md]
trim_trailing_whitespace = false